<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:clipToOutline="false">

    <!-- Icon container with padding for movement -->
    <FrameLayout
        android:id="@+id/icon_container"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:clipToOutline="false">

        <ImageView
            android:id="@+id/splash_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/app_icon"
            android:scaleType="fitCenter"
            android:tint="@color/splashBackground"
            android:clipToOutline="false" />

    </FrameLayout>

    <!-- Speed lines container with absolute positioning -->
    <FrameLayout
        android:id="@+id/speed_lines_container"
        android:layout_width="240dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:clipToOutline="false">

        <ImageView
            android:id="@+id/speed_line_1"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginStart="40dp"
            android:background="@color/splashBackground" />

        <ImageView
            android:id="@+id/speed_line_2"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginStart="120dp"
            android:background="@color/splashBackground" />

        <ImageView
            android:id="@+id/speed_line_3"
            android:layout_width="2dp"
            android:layout_height="120dp"
            android:layout_marginStart="200dp"
            android:background="@color/splashBackground" />

    </FrameLayout>

</RelativeLayout>
